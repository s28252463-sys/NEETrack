
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Rules for the mockTests subcollection
      match /mockTests/{testId} {
        // Allow a user to read, write, and delete their own mock test documents
        allow read, write, delete: if isOwner(userId);
      }
      
      // Allow a user to list the mock tests that belong to them.
      allow list: if isOwner(userId)
        // This 'on' keyword specifies that the 'list' permission applies 
        // to the mockTests subcollection of the user's document.
        on /databases/$(database)/documents/users/$(userId)/mockTests;
    }
  }
}
