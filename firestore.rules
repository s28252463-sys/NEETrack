
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow a user to read and write their own user profile document.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // THIS IS THE CRITICAL FIX:
      // This rule allows a user to QUERY their own mockTests collection.
      // The 'list' permission is required for collection queries (like onSnapshot or getDocs on a collection).
      match /mockTests {
        allow list: if request.auth != null && request.auth.uid == userId;
      }
      
      // This rule allows a user to read, write, or delete INDIVIDUAL mock test documents.
      match /mockTests/{testId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      // Rules for syllabus progress
      match /progress/syllabus {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Rules for pomodoro progress
      match /progress/pomodoro {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
