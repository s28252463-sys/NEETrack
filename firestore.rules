
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // This block allows a user to query their own mockTests collection.
      // This is necessary for the `onSnapshot` listener in MockTests.tsx.
      match /mockTests {
        allow list: if isOwner(userId);
      }
      
      // This block allows a user to read, create, update, and delete
      // their own individual mock test documents.
      match /mockTests/{testId} {
        allow read, write, delete: if isOwner(userId);
      }

      // Rules for syllabus progress
      match /progress/syllabus {
        allow read, write: if isOwner(userId);
      }

      // Rules for pomodoro progress
      match /progress/pomodoro {
         allow read, write: if isOwner(userId);
      }
    }
  }
}
