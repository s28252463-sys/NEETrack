
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // This block handles individual mock test documents
      match /mockTests/{testId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      // This block handles the mock tests collection as a whole
      // This is required for querying/listing the collection.
      match /mockTests {
        allow list: if isOwner(userId);
      }

      // Rules for syllabus progress
      match /progress/syllabus {
        allow read, write: if isOwner(userId);
      }

      // Rules for pomodoro progress
      match /progress/pomodoro {
         allow read, write: if isOwner(userId);
      }
    }

    match /studyMaterials/{subjectId}/topics/{topicId} {
      // Allow read for any authenticated user.
      allow get: if request.auth != null;
      // Allow write only for the admin user.
      allow write: if request.auth != null && request.auth.token.email == 's28252463@gmail.com';
    }
  }
}
