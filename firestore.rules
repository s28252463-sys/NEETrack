
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // This rule allows the owner to list the documents in their own mockTests subcollection.
      // This is what fixes the `operation: "list"` error.
      allow list on mockTests: if isOwner(userId);
      
      // This rule allows the owner to read, write, and delete individual mock test documents.
      match /mockTests/{testId} {
        allow read, write, delete: if isOwner(userId);
      }

      // Rules for syllabus progress
      match /progress/syllabus {
        allow read, write: if isOwner(userId);
      }

      // Rules for pomodoro progress
      match /progress/pomodoro {
         allow read, write: if isOwner(userId);
      }
    }

    match /studyMaterials/{subjectId}/topics/{topicId} {
      // Allow read for any authenticated user.
      allow get: if request.auth != null;
      // Allow write only for the admin user.
      allow write: if request.auth != null && request.auth.token.email == 's28252463@gmail.com';
    }
  }
}
