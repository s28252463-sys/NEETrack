
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Rules for the mockTests subcollection
      match /mockTests/{testId} {
        // This rule allows a user to read, write, and delete their own mock test documents.
        allow read, write, delete: if isOwner(userId);
      }
      // This rule allows a user to query the collection of their own mock tests.
      allow list: if isOwner(userId);

      // Rules for syllabus progress
      match /progress/syllabus {
        allow read, write: if isOwner(userId);
      }

      // Rules for pomodoro progress
      match /progress/pomodoro {
         allow read, write: if isOwner(userId);
      }
    }
  }
}
