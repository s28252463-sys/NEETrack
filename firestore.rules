
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows a user to query their OWN list of mock tests.
    // This is the fix for the "list" operation error.
    match /users/{userId}/mockTests {
      allow list: if request.auth != null && request.auth.uid == userId;
    }

    // This rule allows a user to read, write, and delete a SPECIFIC mock test.
    match /users/{userId}/mockTests/{testId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Subcollection: progress/syllabus
    match /users/{userId}/progress/syllabus {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Subcollection: progress/pomodoro
    match /users/{userId}/progress/pomodoro {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
