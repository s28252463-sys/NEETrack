
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow a user to read and write their own user profile document.
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // This rule allows a user to query (list) their own mock tests
      // and read, write, or delete individual test documents.
      // The 'read' permission on a collection path covers both 'get' (single doc) and 'list' (query).
      match /mockTests/{testId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }

      // Rules for syllabus progress
      match /progress/syllabus {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Rules for pomodoro progress
      match /progress/pomodoro {
         allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
