
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // User profile document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Subcollection: mockTests
    match /users/{userId}/mockTests/{testId} {
      // Allow reading single documents and listing the collection
      allow get, list: if request.auth != null && request.auth.uid == userId;
      // Allow creating, updating, and deleting single documents
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Subcollection: progress/syllabus
    match /users/{userId}/progress/syllabus {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Subcollection: progress/pomodoro
    match /users/{userId}/progress/pomodoro {
       allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
